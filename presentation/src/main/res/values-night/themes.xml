<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Timely" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background_color_light</item>
        <item name="colorSurface">@color/surface_color_light</item>
        <item name="colorPrimary">@color/primary_color_light</item>
        <item name="colorSecondary">@color/secondary_color_light</item>
        <item name="colorError">@color/error_color_light</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_light</item>
        <item name="colorPrimaryVariant">@color/primary_color_light</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSurface">@color/text_color_light</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="android:actionBarStyle">@style/AppBarLight</item>
    </style>

    <style name="AppBarLight" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/app_bar_color_light</item>
        <item name="titleTextColor">@color/text_color_light</item>
    </style>

    <style name="Theme.Timely" parent="Base.Theme.Timely">
        <item name="android:colorBackground">@color/dark_banana</item>
    </style>

</resources>